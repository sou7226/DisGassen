generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model user {
  id    String   @id
  coin  Int      @default(0)
  exp   Int      @default(0)
  layer Int      @default(1)
  x     Int      @default(6)
  y     Int      @default(0)
  items playerItem[]
}

model item {
  item_id Int          @id @default(autoincrement())
  name    String
  type    String
  effect  String
  value   Int
  rarity  String
  players playerItem[]
}

model playerItem {
  player_item_id Int    @id @default(autoincrement())
  quantity       Int    @default(1)
  user           user   @relation(fields: [user_id], references: [id])
  user_id        String
  item           item   @relation(fields: [item_id], references: [item_id])
  item_id        Int
}

model terrain {
  id Int @id @default(autoincrement())
  user_id String
  layer Int @default(1)
  x Int
  y Int
}
model monster{
  id Int @id @default(autoincrement())
  user_id String
  level Int @default(1)
  layer Int @default(1)
  x Int
  y Int
}


