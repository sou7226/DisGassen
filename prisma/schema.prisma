generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model user {
  id    String   @id
  coin  Int      @default(0)
  exp   Int      @default(0)
  layer Int      @default(1)
  x     Int      @default(6)
  y     Int      @default(0)
}
model playerItem {
  id Int @id @default(autoincrement())
  user_id        String
  item_id        Int
  quantity       Int    @default(1)
}
model terrain {
  id Int @id @default(autoincrement())
  user_id String
  layer Int @default(1)
  x Int
  y Int
}
model monster{
  id Int @id @default(autoincrement())
  user_id String
  level Int @default(1)
  layer Int @default(1)
  x Int
  y Int
}


